@page "/lp"
@inherits EmployeeInfo.Bases.EmployeeListBase;
@using EmployeeInfo.Models;

@if (employees == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="card-group">
        @foreach (var employee in employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div style="height: 100%" class="card h-100">
                    <div class="card-header">
                        <h3>@employee.Name</h3>
                    </div>
                    @* <img class="card-img-top imageThumbnail" height="100%" src ="@staff.Photo" /> *@
                    <div class="card-footer text-center">
                        <a href="@($"ed/{employee.EmployeeId}")" class="btn btn-primary m-1">View</a>
                        <a href="@($"editep/{employee.EmployeeId}")" class="btn btn-primary m-1">Edit</a>
                        <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
}